{
  "buildCommand": "echo 'Static site - no build required'",
  "outputDirectory": "./",
  "rewrites": [
    {
      "source": "/dashboard",
      "destination": "/dashboard.html"
    },
    {
      "source": "/tasks",
      "destination": "/tasks.html"
    },
    {
      "source": "/market",
      "destination": "/market.html"
    },
    {
      "source": "/history",
      "destination": "/history.html"
    },
    {
      "source": "/profile",
      "destination": "/profile.html"
    },
    {
      "source": "/business-account",
      "destination": "/business-account.html"
    },
    {
      "source": "/send-money",
      "destination": "/send-money.html"
    },
    {
      "source": "/exchange-rates",
      "destination": "/exchange-rates.html"
    },
    {
      "source": "/about",
      "destination": "/about.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
